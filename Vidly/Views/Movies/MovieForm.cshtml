@model Vidly.ViewModels.MovieFormViewModel

@{
    ViewBag.Title = "MovieForm";
}

@if (Model.Movie.Id == 0)
{
    <h2>Create Movie</h2>
}
else
{
    <h2>Edit Movie</h2>
}

@using (@Html.BeginForm("Save", "Movies"))
{
    <div class="form-group">
        <label for="Movie_Name">Movie Name</label>
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.Movie.Name, new { @class = "form-control" })
        </div>
    </div>


    <div class="form-group">
        <label for="Movie_ReleaseDate">Release Date</label>
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.Movie.ReleaseDate, "{0:d MMM yyyy}", new { @class = "form-control" })
        </div>
    </div>

    <div class="form-group">
        <label for="Movie_NumberInStock">Number in Stock</label>
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.Movie.NumberInStock, new { @class = "form-control" })
        </div>
    </div>

    <div class="form-group">
        <label>Genre</label>
        @Html.DropDownListFor(m => m.Movie.GenreId, new SelectList(Model.Genres, "Id", "Name"), "Select Genre", new { @class = "form-control" })
    </div>

    @Html.HiddenFor(m => m.Movie.Id)
    @Html.HiddenFor(m => m.Movie.DateAdded)
    <button type="submit" class="btn btn-primary">Save</button>
}

<br />
@Html.ActionLink("Delete Movie", "Delete", "Movies", new { id = Model.Movie.Id }, new { @class = "btn btn-primary" })

