@model IEnumerable<Vidly.Models.Customer>

@{
    ViewBag.Title = "Index";
}

<h2>Customers</h2>

<table class="table table-bordered table-hover">
    <tr>
        <th>
            Customer
        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.ActionLink(item.Name, "Details", new { id = item.Id }, null)
            </td>
        </tr>
    }

</table>